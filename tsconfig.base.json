{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": [
      "development"
    ],
    "baseUrl": ".",
    "paths": {
      "@f1-app/api-types": [
        "libs/shared/types/src/index.ts"
      ],
      "@f1-app/e2e-testids": [
        "libs/shared/e2e-testids/src/index.ts"
      ],
      "@f1-app/frontend-styles": [
        "libs/frontend/styles/src/index.ts"
      ]
    }
  }
}
