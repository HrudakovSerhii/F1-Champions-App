{
  "name": "@f1-app/source",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build:web-app": "npx nx build web-app && node scripts/copy-fonts.js",
    "serve:web-app": "npx nx dev web-app",
    "dev:web-app": "npx nx dev web-app",
    "build:mobile-app": "npx nx build mobile-app",
    "serve:mobile-app": "npx nx dev mobile-app",
    "dev:mobile-app": "npx nx dev mobile-app",
    "copy-fonts": "node scripts/copy-fonts.js",
    "serve:backend": "npx nx serve @f1-app/backend",
    "build:backend": "npx nx build @f1-app/backend",
    "dev:backend": "npx nx serve @f1-app/backend",
    "test:backend": "npx nx test @f1-app/backend",
    "generate-types": "./scripts/generate-types.sh",
    "web-app:init": "npm install && npm run generate-types",
    "prisma:init": "cd apps/backend && npx ts-node src/scripts/init-prisma.ts",
    "prisma:stats": "cd apps/backend && npx ts-node src/scripts/init-prisma.ts stats",
    "prisma:verify": "cd apps/backend && npx ts-node src/scripts/init-prisma.ts verify",
    "prisma:setup": "npm run prisma:init && npm run prisma:push && npm run prisma:seed",
    "prisma:generate": "cd apps/backend && npx prisma generate",
    "prisma:seed": "cd apps/backend && npx prisma db seed",
    "prisma:push": "cd apps/backend && npx prisma db push",
    "prisma:pull": "cd apps/backend && npx prisma db pull",
    "prisma:reset": "cd apps/backend && npx prisma db push --force-reset",
    "prisma:studio": "cd apps/backend && npx prisma studio",
    "prisma:generate-and-push": "npm run prisma:generate && npm run prisma:push",
    "prisma:dev:setup": "npm run prisma:setup",
    "prisma:test:setup": "npm run prisma:reset && npm run prisma:seed",
    "db:safety-check": "node scripts/db-safety-check.js",
    "db:purge": "node scripts/db-purge.js",
    "db:mongo:start": "node scripts/mongodb-manager.js start",
    "db:mongo:stop": "node scripts/mongodb-manager.js stop",
    "db:mongo:status": "node scripts/mongodb-manager.js status",
    "db:mongo:setup": "node scripts/mongodb-setup.js",
    "db:local:setup": "npm run db:mongo:start && sleep 3 && npm run db:mongo:setup"
  },
  "private": true,
  "dependencies": {
    "mongodb": "^6.17.0",
    "react": "~18.3.1",
    "react-dom": "~18.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@eslint/js": "^9.8.0",
    "@nx/devkit": "21.0.3",
    "@nx/eslint": "21.0.3",
    "@nx/eslint-plugin": "21.0.3",
    "@nx/jest": "21.0.3",
    "@nx/js": "21.1.1",
    "@nx/nest": "^21.1.1",
    "@nx/node": "21.1.1",
    "@nx/playwright": "21.0.3",
    "@nx/react": "21.0.3",
    "@nx/react-native": "21.0.3",
    "@nx/vite": "21.0.3",
    "@nx/web": "21.1.1",
    "@nx/webpack": "21.1.1",
    "@nx/workspace": "21.0.3",
    "@playwright/test": "^1.36.0",
    "@swc-node/register": "~1.9.1",
    "@swc/cli": "~0.6.0",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@swc/jest": "~0.2.36",
    "@testing-library/dom": "10.4.0",
    "@testing-library/react": "16.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@types/react": "~18.3.12",
    "@types/react-dom": "~18.3.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.0.5",
    "@vitest/ui": "^3.0.0",
    "autoprefixer": "10.4.13",
    "babel-jest": "^29.7.0",
    "eslint": "^9.8.0",
    "eslint-config-prettier": "^10.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsx-a11y": "6.10.1",
    "eslint-plugin-playwright": "^1.6.2",
    "eslint-plugin-react": "7.35.0",
    "eslint-plugin-react-hooks": "5.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.0.3",
    "openapi-typescript": "^7.8.0",
    "postcss": "8.4.38",
    "prettier": "^2.6.2",
    "react-test-renderer": "~18.3.1",
    "tailwindcss": "3.4.3",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "tslib": "^2.3.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.19.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0",
    "webpack-cli": "^5.1.4"
  },
  "workspaces": [
    "apps/*",
    "libs/*"
  ]
}
